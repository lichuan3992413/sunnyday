            </FileNamePattern>

            <MaxHistory>${LogMaxDay}</MaxHistory>

        </rollingPolicy>


        <layout class="ch.qos.logback.classic.PatternLayout">

            <Pattern>

                <![CDATA[

				%d{yyyy-MM-dd HH:mm:ss.SSS}[%thread]%logger{36} %-5level- %msg %n

				]]>

            </Pattern>

