        <file>${LOG_HOME}/njyh_dml_log.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${LOG_HOME}/njyh_dml_log.%d{yyyy-MM-dd}.log</FileNamePattern>
            <MaxHistory>${LogMaxDay}</MaxHistory>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                <![CDATA[
				-- %d{yyyy-MM-dd HH:mm:ss.SSS} %n %msg %n
				]]>
            </Pattern>
        </layout>
    </appender>


    <!-- 接口调用参数处理-->
