    <root level="ERROR">
        <appender-ref ref="stdout"/>
    </root>

    <logger name="root" level="ERROR" additivity="false">

        <level value="ERROR"/>

        <appender-ref ref="stdout"/>

    </logger>


    <logger name="com.hskj" level="INFO" additivity="false">

        <appender-ref ref="stdout"/>

    </logger>


    <logger name="monitor" level="INFO" additivity="false">

        <appender-ref ref="stdout"/>

    </logger>


    <logger name="httpPostLog" level="INFO" additivity="false">

        <appender-ref ref="stdout"/>

    </logger>


    <logger name="report_info" level="INFO" additivity="false">

        <appender-ref ref="stdout"/>

    </logger>


    <logger name="deliver_info" level="INFO" additivity="false">

        <appender-ref ref="stdout"/>

    </logger>


    <logger name="receiver" level="INFO" additivity="false">

        <appender-ref ref="stdout"/>

    </logger>


    <logger name="njyhLog" level="INFO" additivity="false">
        <appender-ref ref="stdout"/>
    </logger>


    <logger name="smsApiLog" level="INFO" additivity="false">
        <appender-ref ref="stdout"/>
    </logger>



    <logger name="njyhDmlLog" level="INFO" additivity="false">
        <appender-ref ref="stdout"/>
    </logger>


</configuration>
